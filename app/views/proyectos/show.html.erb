<table>
    <thead>
        <tr>
            <td>Fecha</td>
            <td>Importe Total (Neto)</td>
            <td>Observaciones</td>
        </tr>
    </thead>
    <tbody>
    <% @proyecto.calculos.each do |calc| %>
        <tr>
            <td><%= calc.fecha_calculo %></td>
            <td><%= calc.importe_total_neto %></td>            
