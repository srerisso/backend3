<p id="notice"><%= notice %></p>

<h1 class="text-xl"><%= @proyecto.Codigo_Alg %></h1>

<h2 class="text-lg">Detalles del proyecto</h2>

<p><label for="notice">Referencia : <%= @proyecto.Referencia %></p>
<p>Cliente :  <%= @proyecto.cliente.Nombre %></p>
<p>Estado :  <%= @proyecto.Estado %></p>

<h2 class="text-lg">Actividad del proyecto</h2>
<table>
    <thead>
        <tr>
            <td>Field</td>
            <td>Proyecto_id</td>
        </tr>
    </thead>
    <tbody>
    <% @proyecto.changelogs.each do |chng| %>
        <tr>
            <td><%= chng.Fecha %></td>
            <td><%= chng.Descripcion %></td>                
        </tr>
    <% end %>
    </tbody>
</table>

